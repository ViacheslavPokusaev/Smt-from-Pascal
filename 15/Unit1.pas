  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var
n:integer;
begin
n:=strtoint(edit1.Text);
if (n mod 1=0) and (n mod n=0) then edit2.Text:='1';
if  n mod 2=0 then edit2.Text:='0';
end;

end.
